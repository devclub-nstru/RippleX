{
  "name": "ripplex-core",
  "version": "0.0.5",
  "description": "A lightweight, framework-agnostic reactive state management library with fine-grained reactivity and blazing performance.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "npm run build",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "keywords": [
    "ripplex",
    "ripplex-core",
    "yasml",
    "signals",
    "state-management",
    "state",
    "reactive",
    "fine-grained-reactivity",
    "react",
    "vue",
    "angular",
    "preact",
    "framework-agnostic",
    "solid-js",
    "zustand",
    "signal-library",
    "performance",
    "observable",
    "recoil",
    "mobx",
    "reactivity-engine",
    "devclub-nstru",
    "npm-package",
    "typescript"
  ],
  "author": {
    "name": "Dev Club",
    "url": "https://github.com/devclub-nstru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devclub-nstru/ripplex"
  },
  "homepage": "https://github.com/devclub-nstru/ripplex#readme",
  "bugs": {
    "url": "https://github.com/devclub-nstru/ripplex/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@preact/signals": "^2.2.0",
    "@types/react": "^19.1.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "prettier": "3.6.2"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}
